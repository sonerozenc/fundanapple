  <div class="control-group">
    <div class="attach-set">
      <%= f.input :file, input_html: { hidden: true }, label: 'Upload Attachment' %>
      <div class="input-append">
        <input id="file-display" class="input-large uneditable-input" type="text">
        <a id="upload-btn" class="btn"><i class="icon-upload-alt"></i> Browse</a>
      </div>
    </div> <!-- /attach-set -->
  </div> <!-- /control-group -->


  <input id="lefile" type="file" style="display:none">
  <div class="input-append">
    <input id="photoCover" class="input-large" type="text">
    <a class="btn" onlick="$('input[id=lefile]').click();">Browse</a>
  </div>

  <script type="text/javascript">
    $('input[id=lefile]').change(function() {
      $('#photoCover').val($(this).val());
    });
  </script>