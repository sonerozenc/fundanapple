<%= link_to "FundAnApple", root_path, :class => 'brand' %>
<ul class="nav">
  <li>
    <%= link_to "Users", users_url %>
  </li>
  <li>
    <%= link_to "Projects", projects_url %>
  </li>
  <li>
    <%= link_to "Artworks", artworks_url %>
  </li>
  <% if current_user %>
    <li>
      <%= link_to current_user.first_name + "'s profile", site_profile_url %>
    </li>
    <li>
      <%= link_to "Log out", logout_path %>
    </li>
  <% end %>
</ul>

<% unless current_user %>
  <div class="navbar-form pull-right">
    <%= form_tag login_path :html => { :class => "form-inline"} do %>
      <%= text_field_tag :email, params[:email], :placeholder => 'Email' %>
      <%= password_field_tag :password %>
      <button class = "btn btn-primary">Log in</button>
    <% end %>
  </div>
<% end %>