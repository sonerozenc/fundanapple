<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label"><%= f.label :title %></label>
    <div class="controls">
      <%= f.text_field :title, :placeholder => 'Title' %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label"><%= f.label :description %></label>
    <div class="controls">
      <%= f.text_area :description, :placeholder => 'Description', rows: "8", cols: "100" %>
    </div>
  </div>
  
  <!-- Used the trick at: http://gregpike.net/demos/bootstrap-file-input/demo.html -->
  <div class="control-group">
    <label class="control-label">Choose your artwork</label>
    <div class="controls">
      <%= f.file_field :file, title: 'Browse' %>
    </div>
  </div>
  <!-- end of trick -->

<!--   <div class="control-group">
    <label class="control-label"><%= f.label :video_url %></label>
    <div class="controls">
      <%= f.text_field :video_url, :placeholder => 'Video URL' %>
    </div>
  </div> -->
  <div class="control-group">
    <label class="control-label"><%= f.label :target_price %></label>
    <div class="controls">
      <%= f.number_field :target_price, :placeholder => 'Target price' %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label"><%= f.label :start_time %></label>
    <div class="controls">
      <%= f.datetime_select :start_time %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label"><%= f.label :end_time %></label>
    <div class="controls">
      <%= f.datetime_select :end_time %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <div class="actions">
        <button class = "btn btn-primary">Add project</button>
      </div>
    </div>
  </div>
<% end %>