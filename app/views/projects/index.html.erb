<h1>Projects</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Target</th>
    <th>Time left</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr id="project-container">
    <td><%= project.title %></td>
    <td>£<%= 10 * Grid.where("project_id = ?", project).length %> pledged of £<%= project.target_price %> goal</td>
    <td><div class="countdown" data-time="<%= project.end_time %>"></div></td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path, html_options = { :class => "btn" } %>

